// 最好的：
class Solution {
    public boolean isPalindrome(int x) {
        if (x < 0 || (x != 0 && x % 10 == 0)) {
            return false;
        }
        int remain = 0;
        while (x > remain) {
            remain = remain * 10 + x % 10;
            x = x / 10;
        }
        return (x == remain || x == remain / 10);
    }
}


// my solution:
class Solution {
    public boolean isPalindrome(int x) {
        if (x < 0) {
            return false;
        }
        if (x == 0) {
            return true;
        }
        String s = String.valueOf(x);
        int l = 0, h = s.length()-1;
        while (l < h) {
            if (s.charAt(l) != s.charAt(h)) {
                return false;
            }
            l++;
            h--;
        }
        return true;
    }
}


